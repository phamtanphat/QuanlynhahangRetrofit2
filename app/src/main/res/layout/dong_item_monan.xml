<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        android:id="@+id/imageviewMonan"
        android:layout_width="150dp"
        android:layout_height="120dp" />
    <TextView
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/imageviewMonan"
        android:textColor="#f20"
        android:textSize="28sp"
        android:text="Ten mon an"
        android:id="@+id/textviewTenmonan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/textviewTenmonan"
        android:textStyle="italic"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/imageviewMonan"
        android:textColor="#3773a1"
        android:textSize="28sp"
        android:text="Gia mon an"
        android:id="@+id/textviewGiamonan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>